<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pok.lab3_v2.Week8_DBAdd">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="26dp"
        android:text="Name :"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="109dp"
        android:text="Phone no. :"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/nameEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="152dp"
        android:layout_y="23dp"
        android:ems="10"
        android:hint="Input your name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="15dp" />

    <EditText
        android:id="@+id/phoneEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="108dp"
        android:ems="10"
        android:hint="Input your phone number"
        android:inputType="phone"
        android:maxLength="12"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="196dp" />

    <Button
        android:id="@+id/insertBtn"
        android:layout_width="171dp"
        android:layout_height="60dp"
        android:layout_x="195dp"
        android:layout_y="442dp"
        android:text="Insert to DB"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="431dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="201dp"
        android:layout_height="156dp"
        android:layout_x="11dp"
        android:layout_y="188dp"
        android:background="@android:color/holo_orange_light"
        app:srcCompat="@drawable/common_full_open_on_phone"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/browseImgBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="255dp"
        android:layout_y="189dp"
        android:text="Browse img"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/imgTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="374dp"
        android:text="Img path :"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="364dp" />
</AbsoluteLayout>
